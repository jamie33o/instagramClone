<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstagramClone" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name ="windowNoTitle">true</item>
        <item name = "windowActionBar">false</item>

        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/ActionBarTitleColor</item>


        <item name="android:button">@color/white</item>
    </style>
    <style name="Theme.Transparent" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="strokeColor">#FA092147</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundColor">#FF0000</item>
    </style>


    <style name="TransparentProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Theme.InstagramClone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.InstagramClone.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.InstagramClone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- styles.xml -->
    <!-- styles.xml -->
    <!-- styles.xml -->
    <style name="BottomPageDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item> <!-- Set the background to transparent -->
        <item name="android:windowIsFloating">true</item> <!-- Set windowIsFloating to false to make it a full-screen bottom sheet -->
        <item name="android:windowAnimationStyle">@style/BottomPageDialogAnimation</item> <!-- Set a custom window animation style -->
    </style>

    <!-- styles.xml -->
    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

<!--settings page-->
    <style name="BottomPageDialogAnimation">
        <!-- Customize the window animation attributes for the bottom page dialog fragment -->
        <item name="android:windowEnterAnimation">@anim/slide_up</item> <!-- Set a custom enter animation -->
        <item name="android:windowExitAnimation">@anim/slide_down</item> <!-- Set a custom exit animation -->
    </style>

<!--personal details page-->
    <style name="personal_details_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize the appearance of the dialog here -->
        <item name="android:background">@color/rows_background</item>
        <item name="android:textColor">@color/text_color</item>
        <!-- Add other style attributes as desired -->
    </style>


</resources>