<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context=".settings.Settings">

    <include
        android:id="@+id/include4"
        layout="@layout/my_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/Sign_up_Registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Sign-up/Registration"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/profile_creation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Profile Creation"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Privacy Policy"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/terms_of_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Terms of Service"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/community_guidelines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Community Guidelines"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/safetytips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Safety Tips"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/FAQ_Help_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="FAQ/Help Center"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/contact_Us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Contact Us"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/billing_and_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Billing and Payment"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/refund_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Refund Policy"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Logout"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edge_background"
                    android:paddingVertical="30dp"
                    android:text="Delete account"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />
            </TableRow>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>